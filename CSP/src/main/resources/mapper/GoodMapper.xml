<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shisizu.dao.GoodDao">
    <select id="selectRandom" resultType="com.shisizu.domain.Good" parameterType="String">
        SELECT * FROM goods  ORDER BY  RAND() LIMIT 12
    </select>
    <select id="selectType" resultType="com.shisizu.domain.Good" parameterType="String">
        SELECT * FROM goods where gType LIKE CONCAT('%',#{gType})
    </select>
</mapper>